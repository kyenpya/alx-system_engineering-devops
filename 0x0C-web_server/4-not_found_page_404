#!/bin/env bash

# Update package list and install nginx
apt-get update
apt-get install -y nginx

# Create the HTML file containing "Hello World!" to ensure Nginx is working
echo "Hello World!" > /var/www/html/index.html

# Create the custom 404 error page
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Configure Nginx to use the custom 404 error page
cat <<EOL > /etc/nginx/sites-available/default
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }

    error_page 404 /404.html;
    location = /404.html {
        internal;
    }

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}
EOL

# Restart nginx service using the service command
service nginx restart

# Verify that Nginx is running and listening on port 80
if service nginx status > /dev/null; then
  echo "Nginx is running."
else
  echo "Nginx is not running. Exiting."
  exit 1
fi

# Verify that the custom 404 error page is working
if curl -s http://localhost/nonexistent | grep -q "Ceci n'est pas une page"; then
  echo "Custom 404 error page configured successfully."
else
  echo "Failed to configure custom 404 error page."
  exit 1
fi
